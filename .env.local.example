# Gemini AI API Key
GEMINI_API_KEY=your_gemini_api_key_here

# Firebase Client SDK Configuration (for authentication)
# Get these from Firebase Console > Project Settings > Your Apps > Web App
NEXT_PUBLIC_FIREBASE_API_KEY=your_firebase_api_key_here
NEXT_PUBLIC_FIREBASE_AUTH_DOMAIN=your_project_id.firebaseapp.com
NEXT_PUBLIC_FIREBASE_PROJECT_ID=your_project_id
NEXT_PUBLIC_FIREBASE_STORAGE_BUCKET=your_project_id.appspot.com
NEXT_PUBLIC_FIREBASE_MESSAGING_SENDER_ID=your_messaging_sender_id
NEXT_PUBLIC_FIREBASE_APP_ID=your_firebase_app_id
NEXT_PUBLIC_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Firebase Admin SDK Configuration (for server-side operations)
FIREBASE_PROJECT_ID=your_project_id

# Vercel Blob Storage (for image uploads)
BLOB_READ_WRITE_TOKEN=your_vercel_blob_token_here

# Sentry Error Monitoring
# Get your DSN from Sentry Dashboard > Project Settings > Client Keys (DSN)
NEXT_PUBLIC_SENTRY_DSN=https://your_public_key@o12345.ingest.sentry.io/12345

# Sentry Auth Token (for source map uploads in CI/CD)
# Generate at: https://sentry.io/settings/auth-tokens/
# Required scopes: project:releases, org:read
SENTRY_AUTH_TOKEN=your_sentry_auth_token_here
